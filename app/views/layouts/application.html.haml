!!!
%html
  %head
    %title JobBoard
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %nav
      %ul
        - if current_user
          / Signed in
          %li= current_user.email
          %li= link_to "Log out", destroy_user_session_path, method: :delete
        - else
          / Not signed in
          %li= link_to "Log in", new_user_session_path

    %p.notice= notice
    %p.alert= alert

    = yield
